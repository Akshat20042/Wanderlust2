<% layout("/layouts/boilerplate") %>
<body>
    <div class="row">
        <h2 class="col-8 offset-2">SignUp on WanderLust</h2>
        <div class="col-8 offset-2">
            <form method="post" action="/signup" novalidate class="needs-validation mt-4">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control"  required>
                <div class="valid-feedback">Looks Good!</div><br>
                <label for="em" class="form-label">Email</label>
                <input name="email" id="em" type="email" class="form-control" required><br>
                <label for="pass" class="form-label">Password</label>
                <input id="pass" type="password" class="form-control" name="password" required><br>
                <button class="btn btn-success mt-4">SignUp</button>
            </form>
        </div>
    </div>
</body>